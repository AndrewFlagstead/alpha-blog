<h1 class="text-center mt-4">AlphaBlog Users</h1>
<div class="pagination-wrapper" >
  <div class="digg_pagination">
    <%= will_paginate @users, class: "text-center" %>
  </div>
</div>
<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow-sm mb-5 bg-body rounded">
          <div class="card-header fst-italic">
           <%= link_to user.username, user_path(user) %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravitar_for(user, size: 100), user_path(user) %>
            </h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to "View Profile", user_path(user), class: "btn btn-primary text-white" %>
            <% if logged_in?%>
              <% if user.id == session[:user_id] %>
                <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-success text-white" %>
              <% end %>
              <% if current_user.admin? %>
                <%= link_to "Delete User", user_path(user), class: "btn btn-danger text-white", method: :delete,
                        data: { confirm: "Are you sure? This will delete the user and their articles!" } %>
              <% end %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="pagination-wrapper">
  <div class="digg_pagination mb-3">
    <%= will_paginate @articles %>
  </div>
</div>