<h1 class="text-center mt-4">Log In</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow-sm mb-5 bg-body rounded p-5", id: "create-edit-form", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 form-label"%>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 form-label"%>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Log In", class: "btn btn-primary text-white" %>
        </div>
      <%end%>
    </div>
  </div> 
  <div class="row justify-content-center mb-3">
    <%= link_to 'Back', root_path, class: "btn btn-success text-white"%>
  </div>
</div>