<% if @article.errors.any? %>
  <h2>The following errors prevent the creation of an article</h2>
  <ul>
    <% @article.errors.full_messages do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%= f.label :title, class: "form-label col-2"%>
    <div class="col-10">
      <%= f.text_field :title, class: "form-control"%>
    </div>
  </p>

  <p>
    <%= f.label :description%>
    <%= f.text_area :description%>
  </p>

  <p>
    <%= f.submit%>
  <p>
<%end%>